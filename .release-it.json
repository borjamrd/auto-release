{
    "github": {
        "release": true
    },
    "git": {
        "requireBranch": "main",
        "commitMessage": "chore: release v${version}"
    },
    "hooks": {
        "before:init": [
            "git pull origin main",
            "ng test"
        ],
        "after:bump": "npx auto-changelog -p"
    }
}